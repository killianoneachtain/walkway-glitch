<section class="ui raised segment">
    <div class="ui two column grid basic middle aligned segment">
        <div class="ten wide column">
            <form class="ui stacked segment form" action="/addPOI" method="POST" id="addPOI">
                <h1 class="ui header">New Walkway</h2>
                <div class="two fields">
                    <div class="required field {{#if errorz.county}}error{{/if}}">
                        <label>County</label>
                        <div class="ui fluid selection dropdown">
                            <input type="hidden" name="county" value="{{values.county}}">
                            <i class="dropdown icon"></i>
                            <div class="default text">Select County</div>
                            <div class="menu">
                                <div class="item" data-value="Antrim">Antrim</div>
                                <div class="item" data-value="Armagh">Armagh</div>
                                <div class="item" data-value="Carlow">Carlow</div>
                                <div class="item" data-value="Cavan">Cavan</div>
                                <div class="item" data-value="Clare">Clare</div>
                                <div class="item" data-value="Cork">Cork</div>
                                <div class="item" data-value="Derry">Derry</div>
                                <div class="item" data-value="Donegal">Donegal</div>
                                <div class="item" data-value="Down">Down</div>
                                <div class="item" data-value="Dublin">Dublin</div>
                                <div class="item" data-value="Fermanagh">Fermanagh</div>
                                <div class="item" data-value="Galway">Galway</div>
                                <div class="item" data-value="Kerry">Kerry</div>
                                <div class="item" data-value="Kildare">Kildare</div>
                                <div class="item" data-value="Kilkenny">Kilkenny</div>
                                <div class="item" data-value="Laois">Laois</div>
                                <div class="item" data-value="Leitrim">Leitrim</div>
                                <div class="item" data-value="Limerick">Limerick</div>
                                <div class="item" data-value="Longford">Longford</div>
                                <div class="item" data-value="Louth">Louth</div>
                                <div class="item" data-value="Mayo">Mayo</div>
                                <div class="item" data-value="Meath">Meath</div>
                                <div class="item" data-value="Monaghan">Monaghan</div>
                                <div class="item" data-value="Offaly">Offaly</div>
                                <div class="item" data-value="Roscommon">Roscommon</div>
                                <div class="item" data-value="Sligo">Sligo</div>
                                <div class="item" data-value="Tipperary">Tipperary</div>
                                <div class="item" data-value="Tyrone">Tyrone</div>
                                <div class="item" data-value="Waterford">Waterford</div>
                                <div class="item" data-value="Westmeath">Westmeath</div>
                                <div class="item" data-value="Wexford">Wexford</div>
                                <div class="item" data-value="Wicklow">Wicklow</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="required field {{#if errorz.trailname}}error{{/if}}">
                    <label>Trail Name</label>
                    <input value="{{values.trailname}}" type="text" name="trailname">
                </div>

                <div class="two fields">
                    <div class="required field {{#if errorz.trailtype}}error{{/if}}">
                        <label>Trail Type</label>
                        <div class="ui fluid selection search dropdown" data-tooltip="Type in field to Add New Type">
                            <input type="hidden" name="trailtype" value="{{values.trailtype}}">
                            <i class="dropdown icon"></i>
                            <div class="default text">Select Trail Type</div>
                            <div class="menu">
                                {{#each categories}}
                                <div class="item" data-value="{{this}}">{{this}}</div>
                                {{/each}}
                            </div>
                        </div>

                    </div>
                    <div class="required field {{#if errorz.traillength}}error{{/if}}">
                        <label>Trail Length</label>
                        <div class="ui right labeled input">
                            <input value="{{values.traillength}}" type="number" step="0.1" min="0.5" max="600" name="traillength">
                            <div class="ui basic label">
                                Km
                            </div>
                        </div>
                    </div>
                </div>

                <div class="one field">
                    <div class="ui form">
                        <div class="required field {{#if errorz.grade}}error{{/if}}">
                            <label>Grade</label>
                            <select multiple="" data-value="{{values.grade}}" class="ui dropdown" name="grade">
                                <option value="">Select Grade</option>
                                <option value="Easy">Easy</option>
                                <option value="Moderate">Moderate</option>
                                <option value="Strenuous">Strenuous</option>
                                <option value="Very Difficult">Very Difficult</option>
                                <option value="Wheelchair and Buggy Accessible">Wheelchair and Buggy Accessible</option>
                            </select>
                        </div>
                    </div>
                </div>


                <div class="two fields">
                    <div class="field {{#if errorz.time}}error{{/if}}">
                        <label>Approximate Walking Time</label>
                        <div class="ui right labeled input">
                            <input value="{{values.time}}" type="time" step="300" name="time">
                            <div class="ui basic label">
                                Hrs
                            </div>
                        </div>
                    </div>

                    <div class="field {{#if errorz.nearesttown}}error{{/if}}">
                        <label>Nearest Town</label>
                        <input placeholder="Nearest Town" value="{{values.nearesttown}}" type="text" name="nearesttown">
                    </div>
                </div>

                <div class="field {{#if errorz.description}}error{{/if}}">
                    <label>Description</label>
                        <div class="ui left corner labeled input">
                            <div class="ui left corner label">
                                <i class="pen icon"></i>
                            </div>
                        <textarea placeholder="{{values.description}}" data-value="{{values.description}}" lang="English" type="text" maxlength="500" spellcheck="true"
                                      name="description"></textarea>
                        </div>
                        </div>

                <div class="one field">
                    <label>Start Co-Oridnates</label>
                    <div class="two fields">
                        <div class="required field {{#if errorz.startlat}}error{{/if}}">
                            <label>Latitude</label>
                            <div class="ui right labeled input">
                                <input placeholder="00.000000" value="{{values.startlat}}" type="number" step="0.000001" min="51.0" max="56.0" name="startlat">
                                <div class="ui basic label">
                                    <sup>o</sup>
                                </div>
                            </div>
                        </div>
                        <div class="required field {{#if errorz.startlong}}error{{/if}}">
                            <label>Longitude</label>
                            <div class="ui right labeled input">
                                <input placeholder="00.000000" value="{{values.startlong}}" type="number" step="0.000001" min="-10.0" max="-5.0" name="startlong">
                                <div class="ui basic label">
                                    <sup>o</sup>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="one field">
                        <label>End Co-Oridnates</label>
                        <div class="two fields">
                            <div class="field {{#if errorz.endlat}}error{{/if}}">
                                <label>Latitude</label>
                                <div class="ui right labeled input">
                                    <input value="00.000000" {{#if errorz.endlat}}value="{{values.endlat}}"{{/if}} type="number" step="0.000001" min="51.0" max="56.0" name="endlat">
                                    <div class="ui basic label">
                                        <sup>o</sup>
                                    </div>
                                </div>
                            </div>
                            <div class="field {{#if errorz.endlong}}error{{/if}}">
                                <label>Longitude</label>
                                <div class="ui right labeled input">
                                    <input value="00.000000" {{#if errorz.endlong}}value="{{values.endlong}}"{{/if}} type="number" step="0.000001" min="-10.0" max="-5.0" name="endlong">
                                    <div class="ui basic label">
                                        <sup>o</sup>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <button class="ui blue submit button">Submit</button>
                <i class="red asterisk icon"></i>Denotes required field
            </form>
            {{> error}}
        </div>
        <div class="six wide column">
            <img class="ui image" src="images/trail.png">
        </div>
    </div>
</section>

